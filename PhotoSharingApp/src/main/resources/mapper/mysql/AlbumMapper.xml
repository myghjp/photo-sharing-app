<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.AlbumMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Album" id="AlbumsTable">
		<id column="id" property="id" />
		<result column="group_id" property="groupId" />
		<result column="album_name" property="albumName" />
	</resultMap>
	
	<insert id="insert">
		insert into albums(
			 group_id
			,album_name
		)VALUES(
			 #{album.groupId}
			,#{album.albumName}
		)
	</insert>
	
	<delete id="delete">
		delete from albums
		where id = #{albumId}
	</delete>
	
	<!-- ーーーーーーーーーーーーーーーーーーーー -->
	
	<!-- 修正 -->
	<select id="selectAlbums" resultMap="AlbumsTable">
		select albums.id,album_name
		from albums
			left join `groups`
			on group_id = groups.id
		where group_id = #{groupId}
	</select>
	
	<select id="selectAlbum" resultMap="AlbumsTable">
		select id,album_name
		from albums
		where id = #{albumId}
	</select>
	
	<!-- 修正 -->
	<select id="selectGroupByAccountId" resultType="Integer">
		select groups.account_id
		from albums
			left join `groups`
			on group_id = groups.id
		where albums.id = #{albumId}
	</select>
	
</mapper>