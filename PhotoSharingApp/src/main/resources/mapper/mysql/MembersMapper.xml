<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.MembersMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Members" id="MembersTable">
		<id column="id" property="id" />
		<result column="group_id" property="groupId" />
		<result column="account_id" property="accountId" />
		<collection property="groups" resultMap="GroupsTable" columnPrefix="groups__"/>
	</resultMap>
	
	<resultMap type="portfolio.PhotoSharingApp.entity.Groups" id="GroupsTable">
		<id column="id" property="id" />
		<result column="group_name" property="groupName" />
		<result column="account_id" property="accountId" />
		<collection property="accounts" resultMap="AccountsTable" columnPrefix="accounts_"/>
	</resultMap>
	
	<resultMap type="portfolio.PhotoSharingApp.entity.Accounts" id="AccountsTable">
		<id column="id" property="id" />
		<result column="user" property="user" />
		<result column="pass" property="pass" />
		<result column="email_address" property="emailAddress" />
	</resultMap>
	
	<!-- 利用者の追加 -->
	<insert id="insertMembers">
		insert into groups_members(
			 group_id
			,account_id
		)VALUES(
			 #{members.groupId}
			,#{members.accountId}
		)
	</insert>
	
	<!-- グループ内の利用者一覧を取得 -->
	<select id="selectMembersList" resultMap="GroupsTable">
		select accounts.user as accounts_user
				,groups.group_name as groups_group_name
		from `groups`
			left join groups_members
				on groups.id = groups_members.group_id
			left join accounts
				on groups_members.account_id = accounts.id
			where groups.id = #{id}
	</select>
	
	<!-- 利用者の削除 -->
	<delete id="deleteMembers">
		delete from groups_members
		where id = #{id}
	</delete>
	
</mapper>