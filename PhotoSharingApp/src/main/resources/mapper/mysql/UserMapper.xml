<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.UserMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Accounts" id="accountsTable">
		<id column="id" property="id" />
		<result column="user" property="user" />
		<result column="pass" property="pass" />
		<result column="email_address" property="emailAddress" />
	</resultMap>
	
	<!-- ログイン(アカウント名が存在するかを確認) -->
	<select id="getSelectUser" resultMap="accountsTable">
		select *
		from accounts 
		where user = #{user}
	</select>
	
	<!-- ※EntryAccountーーーーーーーーーーーーーーーーー -->
	
	<!-- アカウント登録 -->
	<insert id="insertAccount">
		insert into accounts(
			 user
			,pass
			,email_address
		)VALUES(
			 #{accounts.user}
			,#{accounts.pass}
			,#{accounts.emailAddress}
		)
	</insert>
	
	<!-- アカウント名がデータベースに存在するかを確認 -->
	<select id="selectByUser">
		select user
		from accounts
		where user = #{accounts.user}
	</select>
	
	<!-- メールアドレスがデータベースに存在するかを確認 -->
	<select id="selectByEmailAddress">
		select email_address
		from accounts
		where email_address = #{accounts.emailAddress}
	</select>
	
	<!-- ーーーーーーーーーーーーーーーーーー -->
	
	<!-- パスワード変更 -->
	<update id="updatePass">
		update accounts
		set pass = #{accounts.pass}
		where id = #{accounts.id}
	</update>
	
	<!-- ーーーーーーーーーーーーーーーーーー -->
	
	<!-- アカウントを削除 -->
	<delete id="deleteAccount">
		delete from accounts
		where id = #{id}
	</delete>
	
	<!-- ーーーーーーーーーーーーーーーーーー -->

	
	<!-- idからuserNameを取得 -->
	<select id="selectByUserName">
		select 
			accounts.id
			,user
		from accounts
			left join groups_members
			on accounts.id = account_id
		where groups_members.id = #{id}
	</select>
	
</mapper>