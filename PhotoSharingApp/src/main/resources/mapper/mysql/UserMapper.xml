<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.UserMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Accounts" id="accountsTable">
		<id column="id" property="id" />
		<result column="user" property="user" />
		<result column="pass" property="pass" />
		<result column="email_address" property="emailAddress" />
	</resultMap>
	
	<!-- ーーーloginーーー-->
	
	<!-- アカウント名が存在するかを確認● -->
	<select id="getSelectUser" resultMap="accountsTable">
		select *
		from accounts 
		where user = #{user}
	</select>
	
	<!-- ーーーEntryAccountーーー-->
	
	<insert id="insert">
		insert into accounts(
			 user
			,pass
			,email_address
		)VALUES(
			 #{accounts.user}
			,#{accounts.pass}
			,#{accounts.emailAddress}
		)
	</insert>
	
	<!-- アカウント名がデータベースに存在するかを確認● -->
	<select id="selectByUser"><!-- getSelectUser(Name) -->
		select user
		from accounts
		where user = #{accounts.user}
	</select>
	
	<!-- メールアドレスがデータベースに存在するかを確認 -->
	<select id="getSelectEmailAddress">
		select email_address
		from accounts
		where email_address = #{accounts.emailAddress}
	</select>
	
	<!-- ーーーEditAccountーーー -->
	
	<update id="update">
		update accounts
		set pass = #{accounts.pass}
		where id = #{accounts.id}
	</update>
	
	<!-- ーーーDeleteAccountーーー -->
	
	<delete id="delete">
		delete from accounts
		where id = #{id}
	</delete>
	
</mapper>