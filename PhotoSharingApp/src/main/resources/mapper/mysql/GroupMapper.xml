<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.GroupMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Groups" id="GroupsTable">
		<id column="id" property="id" />
		<result column="group_name" property="groupName" />
		<result column="account_id" property="accountId" />
		
	</resultMap>
	
	<!-- 重複確認 -->
	<select id="selectGroupData" resultMap="GroupsTable">
		select group_name
		from `groups`
		where group_name = #{groupName}
	</select>
	
	<!-- アカウント登録 -->
	<insert id="insertGroupName">
		insert into `groups`(
			 group_name
			,account_id
		)VALUES(
			 #{groups.groupName}
			,#{groups.accountId}
		)
	</insert>
	
	<select id="selectGroupName" resultMap="GroupsTable">
		select id,group_name
		from `groups`
	</select>
	
	<select id="selectGroups" resultMap="GroupsTable">
		select *
		from `groups`
		where id = #{id}
	</select>
	
	<!-- アカウントを削除 -->
	<delete id="deleteGroup">
		delete from `groups`
		where id = #{id}
	</delete>
	
</mapper>