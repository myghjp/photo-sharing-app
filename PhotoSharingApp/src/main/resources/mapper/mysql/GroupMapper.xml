<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="portfolio.PhotoSharingApp.repository.GroupMapper">

	<resultMap type="portfolio.PhotoSharingApp.entity.Groups" id="GroupsTable">
		<id column="id" property="id" />
		<result column="group_name" property="groupName" />
		<result column="account_id" property="accountId" />
	</resultMap>
	
	<!-- EntryGroupーーーーーーーーーーーーーーーーー -->
	
	<!-- グループ名とログイン中のアカウントIDを追加 -->
	<insert id="insertGroup">
		insert into `groups`(
			 group_name
			,account_id
		)VALUES(
			 #{groups.groupName}
			,#{groups.accountId}
		)
	</insert>
	
	<!-- データベースに登録済のグループ名と重複していないか確認 -->
	<select id="selectGroupData" resultType="String">
		select group_name
		from `groups`
		where group_name = #{groups.groupName}
	</select>
	
	<!-- SelectGroupーーーーーーーーーーーーーーーーー -->
	
	<!-- 自身が所属しているグループのIDとグループ名の一覧を取得 -->
	<select id="selectGroupList" resultMap="GroupsTable">
		select distinct groups.id,group_name
		from `groups`
			left join groups_members
			on groups.id = groups_members.group_id
		where groups.account_id = #{id}
		or groups_members.account_id = #{id}
	</select>
	
	<!-- groupsテーブルの情報を取得 -->
	<select id="selectGroups" resultMap="GroupsTable">
		select *
		from `groups`
		where id = #{id}
	</select>
	
	<!-- DeleteGroupーーーーーーーーーーーーーーーーー -->
	
	<!-- グループの削除 -->
	<delete id="deleteGroup">
		delete from `groups`
		where id = #{id}
	</delete>
	
	<!-- ？？？ーーーーーーーーーーーーーーーーー -->
	
	<select id="groupAdmin" resultType="Integer">
		select account_id
		from `groups`
		where account_id = #{id}
		limit 1
	</select>
	
</mapper>